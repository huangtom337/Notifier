{
  "manifest_version": 2,
  "name": "Craigslist Notifier",
  "version": "1.0",
  "permissions": [
    "notifications",
    "storage",
    "background",
    "alarms",
    "https://*.craigslist.org/"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "icon.png"
  }
}
