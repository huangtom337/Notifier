{
  "manifest_version": 3,
  "name": "Craigslist Notifier",
  "version": "1.0",
  "description": "A Chrome extension to notify about new Craigslist posts",
  "permissions": [
    "storage",
    "alarms",
    "notifications",
    "scripting",
    "tabs",
    "activeTab",
    "webRequest"
  ],
  "host_permissions": ["https://*.craigslist.org/"],
  "background": {
    "service_worker": "dist/background.bundle.js"
  },
  "action": {
    "default_popup": "html/popup.html"
  },
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  }
}
